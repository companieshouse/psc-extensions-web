    {
      key: {
        text: "Company number"
      },
      value: {
        text: ""
      }
    },
    {
      key: {
        text: "PSC name"
      },
      value: {
        html: ""
      }
    },
    {
      key: {
        text: " Extension request reference number"
      },
      value: {
        html: ''
      }
    }
  ]
}) }}
  
  <p class = "govuk-body"> This PSC has been given an additional 14 days to provide their verification details.</p>
      <p class="govuk-body">We have sent a confirmation email to <strong>{{userEmailAddress}}</strong>
        .We'll also send a letter to the PSC to inform them of their new deadline.</p> 

        
