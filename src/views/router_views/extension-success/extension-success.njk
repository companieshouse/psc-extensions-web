<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
  {{ govukPanel({
  titleText: "Extension request successful",
  html: "Verification deadline extended to <br> <strong>28 June 2025</strong>" 
}) }}
    {{ govukSummaryList({
  rows: [
    {
      key: {
        text: " Company name"
      },
      value: {
        text: ""
      }
